<div class="popup" id="popup-new-connection" data-close-by-backdrop-click="false" style="height:500px;">
	<div class="view">
		<div class="page">
			<div class="navbar">
				<div class="navbar-bg"></div>
				<div class="navbar-inner">
					<div class="title">New connection</div>
				</div>
			</div>
			<div class="page-content">
                <div class="block">
                    Enter the details of the connection you want to add to this project.
                </div>

				<div class="row">
					<div class="col">
						<div class="block">
							<div class="form-group">
								<label class="control-label label-margin">Host</label>
								<input class="form-control return-value" type="text" name="server" />
							</div>
						</div>
					</div>
					<div class="col">
						<div class="block">
							<div class="form-group">
								<label class="control-label label-margin">Database</label>
								<input class="form-control return-value" type="text" name="database" />
							</div>
						</div>
					</div>
					<div class="col">
						<div class="block">
							<div class="form-group">
								<label class="control-label label-margin">Port</label>
								<input class="form-control return-value" type="text" name="port" value="3306" />
							</div>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col">
						<div class="block">
							<div class="form-group">
								<label class="control-label label-margin">Username</label>
								<input class="form-control return-value" type="text" name="user" />
							</div>
						</div>
					</div>
					<div class="col">
						<div class="block">
							<div class="form-group">
								<label class="control-label label-margin">Password</label>
								<input class="form-control return-value" type="text" name="password" />
							</div>
						</div>
					</div>
				</div>
			</div>

            <div class="toolbar toolbar-bottom">
                <div class="toolbar-inner">
                    <a class="link close-popup">Cancel</a>
                    <a class="link confirm">Add</a>
                </div>
            </div>
		</div>
	</div>
</div>